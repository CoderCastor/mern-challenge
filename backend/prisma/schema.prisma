generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  address  String
  password String

  role     role
  ratings rating[]
}

model Shop {
  id      String @id @default(uuid())
  name    String
  address String

  ratings rating[]
}

model rating {
  id     String @id @default(uuid())
  userId String
  shopId String

  user User @relation(fields: [userId], references: [id])
  shop Shop @relation(fields: [shopId], references: [id])
}

enum role {
  ADMIN
  USER
  STORE_OWNER
}
